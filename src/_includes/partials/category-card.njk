<a href="/categories/{{ category.slug }}" class="group block">
  <div class="relative overflow-hidden rounded-lg aspect-w-3 aspect-h-2">
    <img 
      src="{{ category.image }}" 
      alt="{{ category.title }}" 
      class="w-full h-full object-cover transform group-hover:scale-105 transition duration-300"
    >
    <div class="absolute inset-0 bg-black bg-opacity-40 flex items-center justify-center">
      <h3 class="text-2xl font-bold text-white">{{ category.title }}</h3>
    </div>
  </div>
</a> 