<div class="product-card">
  <img src="{{ product.data.image }}" alt="{{ product.data.title }}" class="w-full h-64 object-cover">
  <div class="p-4">
    <h3 class="text-xl font-semibold">{{ product.data.title }}</h3>
    <p class="text-gray-600">{{ product.data.description }}</p>
    <p class="text-lg font-bold mt-2">{{ product.data.price | formatPrice }}</p>
  </div>
</div> 