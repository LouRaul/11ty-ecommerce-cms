---
layout: layouts/base.njk
title: Welcome to Our Store
description: Discover amazing products in our online store
---

<!-- Hero Section -->
<header class="relative bg-gradient-to-r from-blue-600 to-indigo-600 text-white">
  <div class="container mx-auto px-4 py-16 md:py-20">
    <div class="max-w-3xl relative z-10">
      <h1 class="text-4xl md:text-6xl font-bold mb-6">
        Discover Amazing Products
      </h1>
      <p class="text-xl md:text-2xl mb-8 text-blue-100">
        Shop our curated collection of high-quality items for your lifestyle
      </p>
      <div class="flex flex-wrap gap-4">
        <a 
          href="/products/" 
          class="bg-white text-blue-600 px-6 py-3 rounded-lg font-semibold hover:bg-blue-50 transition"
        >
          Shop Now
        </a>
        <a 
          href="/categories/" 
          class="bg-blue-500 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-400 transition"
        >
          Browse Categories
        </a>
      </div>
    </div>
  </div>
  <!-- Decorative pattern -->
  <div class="absolute inset-y-0 right-0 w-1/3 bg-white/10 transform skew-x-12 -z-0 hidden lg:block"></div>
</header>

<!-- Quick Links -->
<section class="py-12 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- Products -->
      <a href="/products/" class="group">
        <div class="bg-white rounded-xl p-6 shadow-sm hover:shadow-md transition">
          <h2 class="text-lg font-semibold mb-2 group-hover:text-blue-600">All Products</h2>
          <p class="text-sm text-gray-600">Explore our complete collection</p>
        </div>
      </a>

      <!-- Categories -->
      <a href="/categories/" class="group">
        <div class="bg-white rounded-xl p-6 shadow-sm hover:shadow-md transition">
          <h2 class="text-lg font-semibold mb-2 group-hover:text-blue-600">Categories</h2>
          <p class="text-sm text-gray-600">Browse products by category</p>
        </div>
      </a>

      <!-- Admin -->
      <a href="/admin/" class="group">
        <div class="bg-white rounded-xl p-6 shadow-sm hover:shadow-md transition">
          <h2 class="text-lg font-semibold mb-2 group-hover:text-blue-600">Admin Panel</h2>
          <p class="text-sm text-gray-600">Manage products and content</p>
        </div>
      </a>
    </div>
  </div>
</section>

<!-- Featured Categories -->
<section class="py-16">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center mb-8">
      <h2 class="text-2xl font-bold">Shop by Category</h2>
      <a href="/categories/" class="text-blue-600 hover:text-blue-700 text-sm font-semibold">
        View All Categories →
      </a>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {% for category in products.categories %}
      <a href="/categories/{{ category.slug }}/" class="group">
        <div class="relative rounded-lg overflow-hidden aspect-[4/3]">
          {% if category.image %}
          <img 
            src="{{ category.image }}" 
            alt="{{ category.name }}"
            class="w-full h-full object-cover transition transform group-hover:scale-105"
          >
          {% endif %}
          <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-black/20 flex items-end">
            <div class="p-6">
              <h3 class="text-xl font-bold text-white mb-2">{{ category.name }}</h3>
              <p class="text-sm text-white/90">{{ category.description }}</p>
            </div>
          </div>
        </div>
      </a>
      {% endfor %}
    </div>
  </div>
</section>

<!-- Featured Products -->
{% if products.featured.length > 0 %}
<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center mb-8">
      <h2 class="text-2xl font-bold">Featured Products</h2>
      <a href="/products/" class="text-blue-600 hover:text-blue-700 text-sm font-semibold">
        View All Products →
      </a>
    </div>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6">
      {% for product in products.featured | limit(4) %}
      <a href="/products/{{ product.slug }}/" class="group">
        <div class="bg-white rounded-lg shadow-sm hover:shadow-md overflow-hidden transition">
          {% if product.image %}
          <div class="relative aspect-square">
            <img 
              src="{{ product.image }}" 
              alt="{{ product.title }}"
              class="w-full h-full object-cover"
            >
            {% if product.salePrice %}
            <span class="absolute top-2 right-2 bg-red-600 text-white px-2 py-1 rounded-full text-xs">
              Sale
            </span>
            {% endif %}
          </div>
          {% endif %}
          <div class="p-4">
            <h3 class="font-semibold group-hover:text-blue-600">{{ product.title }}</h3>
            <div class="mt-2 space-y-1">
              {% if product.salePrice %}
              <span class="text-gray-500 line-through text-sm">{{ product.price | formatPrice }}</span>
              <div class="text-lg font-bold text-blue-600">{{ product.salePrice | formatPrice }}</div>
              {% else %}
              <div class="text-lg font-bold text-blue-600">{{ product.price | formatPrice }}</div>
              {% endif %}
            </div>
          </div>
        </div>
      </a>
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}

<!-- Features Section -->
<section class="py-16">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Free Shipping -->
      <div class="text-center">
        <h3 class="text-lg font-semibold mb-2">Free Shipping</h3>
        <p class="text-sm text-gray-600">On orders over $100</p>
      </div>

      <!-- Secure Payment -->
      <div class="text-center">
        <h3 class="text-lg font-semibold mb-2">Secure Payment</h3>
        <p class="text-sm text-gray-600">100% secure payment</p>
      </div>

      <!-- Support -->
      <div class="text-center">
        <h3 class="text-lg font-semibold mb-2">24/7 Support</h3>
        <p class="text-sm text-gray-600">Dedicated support</p>
      </div>
    </div>
  </div>
</section>

<!-- Newsletter Section -->
<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="max-w-xl mx-auto text-center">
      <h2 class="text-2xl font-bold mb-4">Stay Updated</h2>
      <p class="text-gray-600 mb-8">Subscribe to our newsletter for exclusive offers and updates</p>
      <form class="flex gap-4">
        <input 
          type="email" 
          placeholder="Enter your email"
          class="flex-1 px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-600 focus:outline-none text-sm"
        >
        <button 
          type="submit"
          class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition text-sm font-semibold"
        >
          Subscribe
        </button>
      </form>
    </div>
  </div>
</section>